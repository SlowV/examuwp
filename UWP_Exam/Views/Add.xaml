<Page
    x:Class="UWP_Exam.Views.Add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Exam.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBox Width="400" Height="60" x:Name="NameFileAdd" Header="File Name"/>

        <TextBox Width="400" x:Name="Content" Height="100" Margin="0 30 0 0" Header="Content" AcceptsReturn="True"/>

        <Button Content="Save file" Margin="0 30 0 0" Width="100" Click="SaveFile"/>
    </StackPanel>
</Page>
